class Level {
  ArrayList balls=new ArrayList();
  int size;
  Level(int tsize) {
    size=tsize;
  }
  void display () {
     for (int i=0;i<balls.size();i++) {
      Bullet bu=(Bullet)balls.get(i);
      bu.display();
    }
    
  }
  void update(float x, float y) {
    while (balls.size ()<size) {
      balls.add(new Bullet());
    }
   }
 }
